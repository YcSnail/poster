
#myCanvas{
    border: 1px solid #ff0000;
    display: block;
    margin: 0 auto;
    width :1080px;
    height :1920px;
}

.save-img{
    width:148rpx;
    font-size:23rpx;
    padding: 0;
}

.contain{
    display: none;
    width: 100%;
    height : 1730rpx;
    background-image: url('http://www.yuanxu.top/static/images/bg.jpg');
    background-size: 100% 100%;
}

.content{
    padding-top: 194rpx;
    padding-left:6%;
    padding-right:6%;
    font-size:22rpx;
}


.header{
    margin-top: 6rpx;
    display:flex;
    font-size:22rpx;
    height: 216rpx;
}

.header .top-view{
    width: 33.3%;
}

/*宣传标语部分*/
.title-view{
    text-align: left;
    font-size: 32rpx;
    color: #27505f;
    padding:54rpx 0;
}

.title-view .top{
    color: #50706b;
    font-size: 44rpx;
}

.title-view .bottom{
    font-weight:600;

}


/*用户头像部分*/
.user-wiew{
    text-align: center;

}

.user-view .user-img{
    width:74%;
    height:94%;
    margin:1% 13%;
    border-radius:50%;
}

/*用户信息部分*/
.user-info-view{
    text-align: center;
}

.user-info-view .info-view{
    width:96%;
    height:50rpx;
    margin: 4rpx 0;
    line-height:50rpx;
    border:1rpx solid #00609d;
    clear: both;
}

.info-view .info-text{
    float: left;

}

.info-view .info-text-left{
    width: 30%;
    text-align: center;
    background-color: #dfebf8;
    border-right: 1px solid #00609d;

}

.info-text-right{
    width: 68%;

}

.user-info-view .info-address{
    height: 44px;
    overflow: hidden;
}

.user-info-view .info-address .info-text-left{
    height: 44px;
    line-height: 44px;
}


.user-info-view .info-address .info-text-right{
    line-height:20px;
}


.body-line{
    margin: 4px 0;
    border-top: 1px dashed #62c41a;
}

/*图片样式*/
.body{
    height: auto;
}

.body-img-list{
    margin: 4rpx 0;
    height: 436rpx;
}


.body .img-item{
    width: 50%;
    float: left;
    text-align:center;
    margin:4rpx 0;
}

.img-item image{
    width:312rpx;
    height:398rpx;
    display:block;
    margin: 0 auto;
}


.img-title{
    width:312rpx;
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    display:inline-block;
    background-color: #83b6d9;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}

.img-title2{
    background-color: #e3e3e3;
}

.img-text{
    margin: 10rpx 0;
    text-align: left;
    line-height: 35rpx;
    height: 70rpx;
}


